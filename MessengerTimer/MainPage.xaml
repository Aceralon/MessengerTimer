<Page x:Class="MessengerTimer.MainPage" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="using:MessengerTimer"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d">
    <Page.Resources>
        <Style TargetType="TextBlock" x:Key="MainPageLargerTextBlock">
            <Setter Property="FontSize" Value="50" />
        </Style>

        <Style TargetType="TextBlock" x:Key="MainPageSmallerTextBlock">
            <Setter Property="FontSize" Value="30" />
        </Style>

        <Style TargetType="Button" x:Key="MainPageLeftSideButton">
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets" />
            <Setter Property="FontSize" Value="36" />
        </Style>

        <Style TargetType="TextBlock" x:Key="MainPageSplitViewText">
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets" />
            <Setter Property="FontSize" Value="36" />
        </Style>

        <Style TargetType="TextBlock" x:Key="MainPageSplitViewPaneText">
            <Setter Property="FontSize" Value="24" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="20 0 0 0" />
        </Style>
    </Page.Resources>

    <NavigationView Name="MainPageNavigationView" ExpandedModeThresholdWidth="1280"
            ItemInvoked="MainPageNavigationView_ItemInvoked" OpenPaneLength="200">
        <NavigationView.MenuItems>
            <NavigationViewItem Name="ResultNavigationItem" Icon="AllApps" Content="Results" Tag="results" />
        </NavigationView.MenuItems>

        <Grid Name="BackGroundGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Frame Grid.Column="0" Name="InfoFrame" VerticalAlignment="Stretch" HorizontalAlignment="Left"
                    Background="{ThemeResource SystemControlAcrylicElementBrush }" />

            <Grid Grid.Column="1">
                <Button Name="滴汤Button" Opacity="0" />

                <Grid Name="MainGrid" Background="#A5FFFFFF" Padding="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="2*" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2.5*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--<Button Name="ScrambleTestButton" Content="ScrambleTest" Click="ScrambleTestButton_Click" />-->

                    <Frame Name="ScrambleFrame" Width="320" Height="240" VerticalAlignment="Bottom" HorizontalAlignment="Right"
                            ManipulationMode="All" ManipulationStarted="ScrambleFrame_ManipulationStarted"
                            ManipulationDelta="ScrambleFrame_ManipulationDelta"
                            ManipulationCompleted="ScrambleFrame_ManipulationCompleted" Grid.RowSpan="2" Grid.ColumnSpan="2"
                            Canvas.ZIndex="10" />

                    <TextBlock Name="ScrambleTextBlock" Style="{StaticResource MainPageSmallerTextBlock}" Grid.ColumnSpan="2"
                            HorizontalAlignment="Center" Margin="5" />

                    <TextBlock Name="StatusTextBlock" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"
                            Style="{StaticResource MainPageLargerTextBlock}" />

                    <Grid Grid.Row="1" Grid.Column="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text=" Ao5: " Style="{StaticResource MainPageSmallerTextBlock}"
                                        VerticalAlignment="Center" />
                                <TextBlock Name="Ao5ValueTextBlock" Margin="30 0 0 0"
                                        Style="{StaticResource MainPageLargerTextBlock}" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="Ao12: " Style="{StaticResource MainPageSmallerTextBlock}"
                                        VerticalAlignment="Center" />
                                <TextBlock Name="Ao12ValueTextBlock" Margin="30 0 0 0"
                                        Style="{StaticResource MainPageLargerTextBlock}" />
                            </StackPanel>
                        </StackPanel>
                        <TextBlock Name="TimerTextBlock" Text="0.000" Grid.Column="1" HorizontalAlignment="Center"
                                Margin="0 35 0 0" VerticalAlignment="Top" Style="{StaticResource MainPageLargerTextBlock}" />
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </NavigationView>
</Page>
