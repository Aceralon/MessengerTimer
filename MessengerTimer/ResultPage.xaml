<Page x:Class="MessengerTimer.ResultPage" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="using:MessengerTimer"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:data="using:MessengerTimer.DataModels" mc:Ignorable="d">
    <Page.Resources>
        <Style TargetType="TextBlock" x:Key="ResultText">
            <Setter Property="FontSize" Value="24" />
            <Setter Property="Margin" Value="10 0 10 0" />
            <Setter Property="Width" Value="70" />
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>

        <Style TargetType="TextBlock" x:Key="NormalText">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>

        <Style TargetType="StackPanel" x:Key="ResultPageStackPanel">
            <Setter Property="Orientation" Value="Horizontal" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="10 0 10 0" />
        </Style>

        <Style TargetType="Button" x:Key="ResultPageButton">
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets" />
            <Setter Property="FontSize" Value="24" />
        </Style>
    </Page.Resources>


    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Padding="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ContentDialog Title="Result"
                       Name="EditDialog"
                       PrimaryButtonText="Confirm"    
                       CloseButtonText="Cancel"
                       DefaultButton="Close">
            <TextBox Name="EditTextBox"              
                     HorizontalAlignment="Left"
                     VerticalAlignment="Center" 
                     Width="150"/>
        </ContentDialog>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Group: " Style="{StaticResource ResultText}" Margin="5 0" />

            <ComboBox Name="GroupComboBox" ItemsSource="{x:Bind DataGroups}" Margin="5 0" SelectionChanged="GroupComboBox_SelectionChanged"
                    SelectedItem="{x:Bind DataGroups[0]}">
                <ComboBox.ItemTemplate>
                    <DataTemplate x:DataType="data:DataGroup">
                        <TextBlock Name="DataGroupNameTextBlock" Text="{x:Bind Type, Mode=OneWay}" FontSize="24" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <Button Name="AddDataGroupButton" Content="&#xE710;" Style="{StaticResource ResultPageButton}" Margin="5 0">
                <Button.Flyout>
                    <Flyout>
                        <StackPanel Style="{StaticResource ResultPageStackPanel}" Margin="0 10">
                            <TextBlock Text="New: " Style="{StaticResource NormalText}" Margin="0 10" />

                            <TextBox Name="NewDataGroupNameTextBox" FontSize="20" Width="150" Margin="10 0" />

                            <Button Name="ConfirmAddDataGroupButton" Content="Add" FontSize="20" Click="ConfirmAddDataGroupButton_Click" />
                        </StackPanel>
                    </Flyout>
                </Button.Flyout>
            </Button>

            <Button Name="DeleteCurrentDataGroupButton" Content="&#xE74D;" Style="{StaticResource ResultPageButton}" Margin="5 0">
                <Button.Flyout>
                    <Flyout>
                        <StackPanel Orientation="Vertical">

                            <TextBlock Text="Confirm delete current DataGroup?" Style="{StaticResource NormalText}"
                                    HorizontalAlignment="Left" />
                            <TextBlock Text="This operation cannot be undo." Foreground="Red" Style="{StaticResource NormalText}" 
                                    HorizontalAlignment="Left" Margin="0 10" />
                            <Button Name="ConfirmDeleteCurrentDataGroupButton" Content="Delete" FontSize="20"
                                    Click="ConfirmDeleteCurrentDataGroupButton_Click"  HorizontalAlignment="Right" />
                        </StackPanel>
                    </Flyout>
                </Button.Flyout>
            </Button>
        </StackPanel>

        <StackPanel Style="{StaticResource ResultPageStackPanel}" Grid.Row="1">
            <TextBlock Text="Id" Style="{StaticResource ResultText}" Width="30" />
            <TextBlock Text="Result" Style="{StaticResource ResultText}" />
            <TextBlock Text="Ao5" Style="{StaticResource ResultText}" />
            <TextBlock Text="Ao12" Style="{StaticResource ResultText}" />
        </StackPanel>

        <Canvas Grid.Row="2">
            <Line X1="0" Y1="0" X2="340" Y2="0" Stroke="Black" StrokeThickness="1" />
        </Canvas>

        <ListView Name="ResultListView" ItemsSource="{x:Bind Results, Mode=OneWay}" Grid.Row="3" SelectionMode="Single">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="data:Result">
                    <StackPanel Style="{StaticResource ResultPageStackPanel}" Margin="0 0 15 0" RightTapped="StackPanel_RightTapped">
                        <TextBlock Name="ResultIdTextBlock" Text="{x:Bind Id, Mode=OneWay }" Style="{StaticResource ResultText}" Width="30" />
                        <TextBlock Name="ResultTextBlock" Text="{x:Bind ResultValue, Mode=OneWay}" Style="{StaticResource ResultText}" />
                        <TextBlock Name="ResultAo5TextBlock" Text="{x:Bind Ao5Value, Mode=OneWay}" Style="{StaticResource ResultText}" />
                        <TextBlock Name="ResultAo12TextBlock" Text="{x:Bind Ao12Value, Mode=OneWay}" Style="{StaticResource ResultText}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
